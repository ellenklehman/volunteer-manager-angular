<div class="jumbotron">
  <h1>Welcome volunteers and organizers!</h1>
  <p>Check out the volunteer opportunities we have to offer.</p>
</div>

<div class="row">
  <div class="col-md-6">
    <% @events.each do |event| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= link_to "#{event.name}", event_path(event) %>
            <span class='badge pull-right'><%= event.vol_num %> vols</span>
          </h3>
        </div>
        <div class="panel-body">
         <p>Date: <%= event.date %></p>
         <p>Location: <%= event.location %></p>
         <p><em>added <%= event.created_at %></em></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-6">
  </div>
</div>

<div class="row organizer-menu">
  <%= link_to "Add an event", new_event_path %>
</div>
